{% extends "base.twig" %}

{% block content %}
  {{ parent() }}

  {# Example of colours #}
  {% set colours = ['white','black','blue','lightblue','pink','burgundy','maroon'] %}
  {# Inline styles for demonstration purposes only #}
  <style>
    html {
      font-family: sans-serif;
    }
    .card {
      padding: 30px;
      float: left;
      margin: 0 15px 30px;
      width: 300px;
      box-shadow: 0px 5px 20px -5px rgba(0,0,0,0.5);
    }
    .clear:after {
      content: "";
      display: table;
      clear: both;
    }
  </style>
  <div class="clear">
    {% for colour in colours %}
      <div class="{{ colour }} card">
        <p>This is a test</p>
        <p class="accent">This in an accent</p>
      </div>
    {% endfor %}
  </div>

{% endblock %}
